          <div class="title-header">
              <div class="left-box">
                  <h2>
                      <%= oneMovie.Title %>
                  </h2>
                  <p>
                      <%= oneMovie.Released%> | <%= oneMovie.Rated%> | <%= oneMovie.Runtime %>
                  </p>
              </div>
              <div class="right-box">
