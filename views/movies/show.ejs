    <%- include('../partials/navbar.ejs') %>
    <section>
      <div class="page-wrapper">
          <div class="title-header">
              <div class="left-box">
                  <h2>
                      <%= oneMovie.Title %>
                  </h2>
                  <p>
                      <%= oneMovie.Released%> | <%= oneMovie.Rated%> | <%= oneMovie.Runtime %>
                  </p>
              </div>
              <div class="right-box">
                  <div class="left-col">
                      <div> IMDb</div>
                      <div>
                          <%= oneMovie.Ratings[0].Value %>
                      </div>
                  </div>
                  <div class="center-col">
                      <div>Rotten Tomatoes</div>
                      <div>
                          <%= oneMovie.Ratings[1].Value %>
                      </div>
                  </div>
                  <div class="right-col">
                      <div>Metacritic</div>
                      <div>
                          <%= oneMovie.Ratings[2].Value %>
                      </div>
                  </div>
              </div>
          </div>
          <div class="poster-container">
              <img class="poster rounded" src="<%= oneMovie.Poster %>" alt="">
              <div class="video-container">
                <iframe width="560" height="315" src="https://www.youtube.com/embed/<%=ytID%>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
              </div>
              
          
          </div>
          <div class="content-container">
            <div> <%let arr = oneMovie.Genre.split(",")%>
              <%for(let i =0; i<arr.length;i++){%>
                <span class="genre-<%=i%>"> | <%=arr[i]%> |</span>
           <% }%>
              </div>
              <div class="plot"><%=oneMovie.Plot%></div>              
              <div>Director: <%= oneMovie.Director %></div>
              <div>Writer: <%=oneMovie.Writer%></div>
              <div>Actors: <%= oneMovie.Actors %></div>
          </div>
      </div>
  </section>
