            <!-- ------------------------------ =ytID%> ------------------------------ -->

          </div>
          <div class="content-container">
            <div>
              <%let arr=oneMovie.Genre.split(",")%>
                <%for(let i=0; i<arr.length;i++){%>
                  <span class="genre" id="gn-<%=i%>"><%=arr[i]%></span>
                  <% }%>
            </div>
            <div class="plot">
              <%=oneMovie.Plot%>
            </div>
            <div class="listEl">Director: <%= oneMovie.Director %>
            </div>
            <div class="listEl">Writer: <%=oneMovie.Writer%>
            </div>
            <div class="listEl last">Actors: <%= oneMovie.Actors %>
            </div>
          </div>
        </div>
      </section>          
    </div>
